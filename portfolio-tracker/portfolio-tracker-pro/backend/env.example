# Environment variables for Portfolio Tracker Pro
# Copy this file to .env and fill in your actual values

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/portfolio_tracker
REDIS_URL=redis://localhost:6379

# Exchange API Keys
BINANCE_API_KEY=your_binance_api_key
BINANCE_SECRET_KEY=your_binance_secret_key

BYBIT_API_KEY=your_bybit_api_key
BYBIT_SECRET_KEY=your_bybit_secret_key

XTB_USERNAME=your_xtb_username
XTB_PASSWORD=your_xtb_password

# Security
SECRET_KEY=your_super_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# External APIs
NBP_API_URL=https://api.nbp.pl/api/exchangerates/rates/A/USD
YAHOO_FINANCE_API_URL=https://query1.finance.yahoo.com/v8/finance/chart
NEWSAPI_KEY=your_newsapi_key_from_newsapi.org

# App Settings
DEBUG=True
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Cache Settings
CACHE_TTL=300
REFRESH_INTERVAL=60


